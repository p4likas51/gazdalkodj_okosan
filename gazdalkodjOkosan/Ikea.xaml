<Window x:Class="gazdalkodjOkosan.Ikea"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gazdalkodjOkosan"
        mc:Ignorable="d"
        Title="Ikea" Height="450" Width="801">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Border Name="Ikeabackground" Grid.ColumnSpan="3" Grid.RowSpan="3"></Border>


        <Label Grid.Row="0" Grid.Column="0" Padding="30"  Grid.ColumnSpan="3" Content="IKEA" FontSize="60" FontWeight="Black" HorizontalAlignment="Center" Background="#FF3336D8" Foreground="#FFFFD43D"></Label>

        <Label Grid.Row="1" BorderBrush="Black" BorderThickness="1"  HorizontalAlignment="Center" VerticalAlignment="Center" Padding="20" FontSize="25" FontWeight="Bold" Foreground="White" Background="#99000000" >Kanapé - 5000Ft</Label>

        <Label Grid.Row="1" Grid.Column="1" BorderBrush="Black" BorderThickness="1"  HorizontalAlignment="Center" VerticalAlignment="Center" Padding="20" FontSize="25" FontWeight="Bold" Foreground="White" Background="#99000000" >Szekrény - 6000 Ft</Label>

        <Label Grid.Row="1" Grid.Column="2" BorderBrush="Black" BorderThickness="1"  HorizontalAlignment="Center" VerticalAlignment="Center" Padding="20" FontSize="25" FontWeight="Bold" Foreground="White" Background="#99000000" >Ágy - 8000 Ft</Label>


        <Button Grid.Column="0" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Top" Content="Vásárlás" FontSize="16" FontWeight="DemiBold" Padding="5" Name="SofaBuy" Click="SofaBuy_Click"></Button>
        <Button Grid.Column="1" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Top" Content="Vásárlás" FontSize="16" FontWeight="DemiBold" Padding="5" Name="CabinetBuy" Click="CabinetBuy_Click"></Button>
        <Button Grid.Column="2" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Top" Content="Vásárlás" FontSize="16" FontWeight="DemiBold" Padding="5" Name="BedBuy" Click="BedBuy_Click"></Button>

        <Label Grid.Row="2" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0 0 0 20" Name="lblIkeaText"></Label>
    </Grid>
</Window>
