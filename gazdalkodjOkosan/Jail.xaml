<Window x:Class="gazdalkodjOkosan.Jail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gazdalkodjOkosan"
        mc:Ignorable="d"
        Title="Jail" Height="450" Width="800" FontSize="40">
    <Grid>
        
        <Label Content="Börtön" HorizontalAlignment="Center" Height="80" VerticalAlignment="Top"/>
        <Button Name="btnRollJail" Width="120px" Height="50px" Margin="0 0 300 0" Content="Dobás" FontSize="20px" Click="btnRollJail_Click"/>
        <Button Name="btnPayJail" Width="120px" Height="50px" Margin="300 0 0 0" Content="Fizetés" FontSize="20px" Click="btnPayJail_Click" IsEnabled="False"/>
        <Button Name="btnExit" Width="120px" Height="50px" Margin="0 300 0 0" Content="Kilépés" FontSize="20px" Click="btnExit_Click" Visibility="Collapsed"/>
        <Label Name="lblAmount" Content="-10000Ft" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="300 100 0 0"/>
        <Label Name="lblRoll" Content="A dobásod: " HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0 100 300 0"/>
    </Grid>
</Window>
