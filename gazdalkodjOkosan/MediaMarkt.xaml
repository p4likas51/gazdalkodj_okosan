<Window x:Class="gazdalkodjOkosan.MediaMarkt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gazdalkodjOkosan"
        mc:Ignorable="d"
        Title="MediaMarkt" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Border Name="MediaBackground" Grid.ColumnSpan="3" Grid.RowSpan="3"></Border>


        <Label Grid.Row="0" Grid.Column="0" Padding="30"  Grid.ColumnSpan="3" Content="MediaMarkt" FontSize="60" FontWeight="Black" HorizontalAlignment="Center" Background="#FFEA3F3F" Foreground="White"></Label>

        <Label Name="lblTv" Grid.Row="1" BorderBrush="Black" BorderThickness="1"  HorizontalAlignment="Center" VerticalAlignment="Center" Padding="20" FontSize="20" FontWeight="Bold" Foreground="White" Background="#99000000" ></Label>

        <Label Name="lblOven" Grid.Row="1" Grid.Column="1" BorderBrush="Black" BorderThickness="1"  HorizontalAlignment="Center" VerticalAlignment="Center" Padding="20" FontSize="20" FontWeight="Bold" Foreground="White" Background="#99000000" ></Label>

        <Label Name="lblWashingmachine" Grid.Row="1" Grid.Column="2" BorderBrush="Black" BorderThickness="1"  HorizontalAlignment="Center" VerticalAlignment="Center" Padding="20" FontSize="20" FontWeight="Bold" Foreground="White" Background="#99000000" ></Label>


        <Button Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Bottom" Content="Vásárlás" FontSize="16" FontWeight="DemiBold" Padding="5" Name="TvBuy" Margin="0,0,0,111" Grid.RowSpan="2" Click="TvBuy_Click"/>
        <Button Grid.Column="1" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Top" Content="Vásárlás" FontSize="16" FontWeight="DemiBold" Padding="5" Name="OvenBuy" Click="OvenBuy_Click"></Button>
        <Button Grid.Column="2" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Top" Content="Vásárlás" FontSize="16" FontWeight="DemiBold" Padding="5" Name="WashingmachineBuy" Click="WashingmachineBuy_Click"></Button>

        <Label Grid.Row="2" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0 0 0 20" Name="lblMediaText"></Label>
    </Grid>
</Window>
