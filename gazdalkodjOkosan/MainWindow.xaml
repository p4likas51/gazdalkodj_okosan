<Window x:Class="gazdalkodjOkosan.MainWindow"
        WindowState="Maximized"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gazdalkodjOkosan"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="1920" FontSize="40">
    <Grid Name="GameGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="160"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="160"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="160"></RowDefinition>
            <RowDefinition Height="115"></RowDefinition>
            <RowDefinition Height="115"></RowDefinition>
            <RowDefinition Height="115"></RowDefinition>
            <RowDefinition Height="115"></RowDefinition>
            <RowDefinition Height="160"></RowDefinition>
            <RowDefinition></RowDefinition>
            
        </Grid.RowDefinitions>
        <Label Panel.ZIndex="1" Name="lblCarInsurance" Grid.Row="0" Grid.Column="8" Grid.ColumnSpan="3" Content="Itt jelenik meg a szöveg!" FontSize="30" Foreground="Black"/>
        <Label Panel.ZIndex="1" Name="lblHouseInsurance" Grid.Row="1" Grid.Column="8" Grid.ColumnSpan="3" Content="Itt jelenik meg a szöveg!" FontSize="30" Foreground="Black"/>
        <Border CornerRadius="16" Panel.ZIndex="2" Grid.Row="0" Grid.Column="11" Grid.ColumnSpan="2" Grid.RowSpan="3" Margin="16 50 16 30" Background="#99000000" BorderBrush="#FF175215" BorderThickness="3"/>
        <Border Name="Wallet" Panel.ZIndex="2" Grid.Row="0" Grid.Column="11" Grid.ColumnSpan="2" Grid.RowSpan="3" />
        <Label Panel.ZIndex="3" Name="lblp1Balance" Grid.Row="2" Grid.Column="11" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Top" FontSize="20" FontFamily="Arial Rounded MT Bold" Margin="30 0 0 0"/>
        <Label Panel.ZIndex="3" Name="lblp2Balance" Grid.Row="2" Grid.Column="12" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Top" FontSize="20" FontFamily="Arial Rounded MT Bold" Margin="0 0 30 0"/>
        <Label Panel.ZIndex="1" Name="lblActionText" Grid.Row="3" Grid.Column="3" Grid.ColumnSpan="4" FontSize="25px" HorizontalContentAlignment="Center">
            <Label.ContentTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding}" TextWrapping="Wrap" TextAlignment="Center"/>
                </DataTemplate>
            </Label.ContentTemplate>
        </Label>
        <Label Name="lblAction" Grid.Row="4" Grid.Column="4" Grid.ColumnSpan="2" FontSize="25px" HorizontalAlignment="Center"/>
        <!--<Label Grid.Row="2" Grid.Column="1" Content="X"/>
        <Label Grid.Row="7" Grid.Column="1" Content="X"/>
        <Label Grid.Row="7" Grid.Column="8" Content="X"/>
        <Label Grid.Row="2" Grid.Column="8" Content="X"/>-->
        <Border Name="Background" Grid.ColumnSpan="13" Grid.RowSpan="9"></Border>
        <Border Panel.ZIndex="1" Name="Cards" Grid.Column="6" Grid.Row="4" Grid.RowSpan="2" Grid.ColumnSpan="2" Margin="0 0 20 0"></Border>
        <Border Panel.ZIndex="1" Name="Title" Grid.Column="2" Grid.Row="4" Grid.RowSpan="2" Grid.ColumnSpan="3" Margin="30 0 0 0"></Border>


        <Rectangle Grid.Column="1" Grid.Row="2" Grid.RowSpan="6" Grid.ColumnSpan="8"  Fill="Transparent" StrokeThickness="3"/>
        <Rectangle Panel.ZIndex="0" Grid.Column="2" Grid.Row="3" Grid.RowSpan="4" Grid.ColumnSpan="6" Stroke="Black" Fill="#FFE8E8E8" StrokeThickness="3"/>
        
        
        <Rectangle Grid.Column="10" Grid.Row="3" Grid.RowSpan="5" Grid.ColumnSpan="3" Stroke="Black" Fill="White" StrokeThickness="5"/>


        <Border Panel.ZIndex="1" BorderBrush="Black" BorderThickness="7" Grid.Column="10" Grid.Row="3"  Grid.ColumnSpan="3">
            <Border Panel.ZIndex="1" Name="rctCar"  Grid.Column="10" Grid.Row="3"  Grid.ColumnSpan="3"/>
        </Border>

        <Border Panel.ZIndex="1" BorderBrush="Black" BorderThickness="7" Grid.Column="10" Grid.Row="4"  Grid.RowSpan="2" >
            <Border  Name="rctOven" Grid.Column="10" Grid.Row="4"  Grid.RowSpan="2" />
        </Border>

        <Border Panel.ZIndex="1" BorderBrush="Black" BorderThickness="7" Grid.Column="11" Grid.Row="4"  Grid.ColumnSpan="2">
            <Border  Name="rctTv" Grid.Column="11" Grid.Row="4"  Grid.ColumnSpan="2"/>
        </Border>

        <Border Panel.ZIndex="1" BorderBrush="Black" BorderThickness="7" Grid.Column="11" Grid.Row="5"  Grid.ColumnSpan="2">
            <Border  Name="rctCabinet" Grid.Column="11" Grid.Row="5"  Grid.ColumnSpan="2"/>
        </Border>

        <Border Panel.ZIndex="1" BorderBrush="Black" BorderThickness="7" Grid.Column="10" Grid.Row="6"  Grid.ColumnSpan="2" >
            <Border  Name="rctBed" Grid.Column="10" Grid.Row="6"  Grid.ColumnSpan="2" ></Border>
        </Border>

        <Border Panel.ZIndex="1" BorderBrush="Black" BorderThickness="7" Grid.Column="12" Grid.Row="6">
            <Border  Name="rctLego" Grid.Column="12" Grid.Row="6"/>
        </Border>


        <Border Panel.ZIndex="1" BorderBrush="Black" BorderThickness="7" Grid.Column="10" Grid.Row="7"  Grid.ColumnSpan="2" >
            <Border  Name="rctSofa" Grid.Column="10" Grid.Row="7"  Grid.ColumnSpan="2" />
        </Border>


        <Border Panel.ZIndex="1" BorderBrush="Black" BorderThickness="7" Grid.Column="12" Grid.Row="7">
            <Border  Name="rctWashing" Grid.Column="12" Grid.Row="7"/>
        </Border>




        <TextBlock Panel.ZIndex="0" Name="tblCar" Grid.Row="3" Grid.Column="10" Grid.ColumnSpan="3" HorizontalAlignment="Center" VerticalAlignment="Center">Garázs (autó)</TextBlock>
        <TextBlock Panel.ZIndex="0" Name="tblOven" Grid.Row="4" Grid.Column="10" Grid.RowSpan="2" FontSize="28" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap">Konyha (sütő)</TextBlock>
        <TextBlock Panel.ZIndex="0" Name="tblTv" Grid.Row="4" Grid.Column="11" Grid.ColumnSpan="2" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center">Házimozi (tv)</TextBlock>
        <TextBlock Panel.ZIndex="0" Name="tblCabinet" Grid.Row="5" Grid.Column="11" Grid.ColumnSpan="2" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap">Előszoba (szekrény)</TextBlock>
        <TextBlock Panel.ZIndex="0" Name="tblBed" Grid.Row="6" Grid.Column="10" Grid.ColumnSpan="2" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap">Hálószoba (ágy)</TextBlock>
        <TextBlock Panel.ZIndex="0" Name="tblLego" Grid.Row="6" Grid.Column="12" FontSize="23" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap">Gyerekszoba (LEGO)</TextBlock>
        <TextBlock Panel.ZIndex="0" Name="tblSofa" Grid.Row="7" Grid.Column="10" Grid.ColumnSpan="2" FontSize="30" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap">Nappali (kanapé)</TextBlock>
        <TextBlock Panel.ZIndex="0" Name="tblWashing" Grid.Row="7" Grid.Column="12" FontSize="25" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap">Fürdő (mosógép)</TextBlock>




