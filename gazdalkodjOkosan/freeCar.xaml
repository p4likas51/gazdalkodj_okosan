<Window x:Class="gazdalkodjOkosan.freeCar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gazdalkodjOkosan"
        mc:Ignorable="d"
        Title="freeCar" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="216*"></ColumnDefinition>
            <ColumnDefinition Width="361*"></ColumnDefinition>
            <ColumnDefinition Width="223*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Border Panel.ZIndex="-1" Name="getCar" Grid.ColumnSpan="3" Grid.RowSpan="3"></Border>
        <Label HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="20" Height="61" FontWeight="Bold" Width="440" Margin="180,0,0,0" Grid.ColumnSpan="3">A gazdag nagybátyád rád hagyott egy autót!</Label>
        <TextBlock Padding="8" TextWrapping="Wrap" HorizontalAlignment="Center" FontSize="15" Grid.Row="0" Grid.Column="1" VerticalAlignment="Top" Height="57" Margin="0,103,0,0" Grid.RowSpan="2" Width="252" Background="#99000000" Foreground="White">Eladhatod 10000 Ft-ért ha már van, ha nincs akkor megtarthatod.</TextBlock>

        <Border Margin="0,30,0,113" Name="brdCarBuy" Grid.Column="1" Grid.Row="1" Grid.RowSpan="2"></Border>

        <Button Name="acceptCar" Padding="3" BorderBrush="Black" BorderThickness="3" FontSize="16" FontWeight="DemiBold"  HorizontalAlignment="Left" Grid.Column="1" Grid.Row="2" VerticalAlignment="Center" Margin="54,0,0,0" Click="acceptCar_Click">Elfogad</Button>
        <Button Name="sellCar" Padding="3" BorderBrush="Black" BorderThickness="3" FontSize="16" FontWeight="DemiBold" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="258,0,0,0" Click="sellCar_Click">Eladás</Button>

    </Grid>
</Window>
