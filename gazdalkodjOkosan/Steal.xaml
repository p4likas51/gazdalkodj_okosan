<Window x:Class="gazdalkodjOkosan.Steal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gazdalkodjOkosan"
        mc:Ignorable="d"
        Title="Steal" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="White"/>
                <GradientStop Color="#FF504F4F" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Border Grid.Row="0" Grid.Column="0" Name="stealIcon"></Border>
        <Border Grid.Row="0" Grid.Column="6" Name="stealIcon2"></Border>

        <TextBlock TextWrapping="Wrap" FontSize="16" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" Grid.ColumnSpan="3">Válassz egy számodra szükséges tárgyat!</TextBlock>

        <Label VerticalAlignment="Center" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" Grid.Column="0" Grid.Row="1" Content="Televízió"></Label>
        <Label VerticalAlignment="Center" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" Grid.Column="1" Grid.Row="1" Content="Sütő"></Label>
        <Label VerticalAlignment="Center" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" Grid.Column="2" Grid.Row="1" Content="Ruhásszekrény"></Label>
        <Label VerticalAlignment="Center" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" Grid.Column="3" Grid.Row="1" Content="Ágy"></Label>
        <Label VerticalAlignment="Center" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" Grid.Column="4" Grid.Row="1" Content="Lego"></Label>
        <Label VerticalAlignment="Center" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" Grid.Column="5" Grid.Row="1" Content="Kanapé"></Label>
        <Label VerticalAlignment="Center" FontSize="14" FontWeight="Bold"  HorizontalAlignment="Center"  Grid.Column="6" Grid.Row="1" Content="Mosógép"></Label>

        <Label VerticalAlignment="Bottom" Foreground="White" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" Grid.Column="0" Grid.Row="1" Content="6000 Ft"></Label>
        <Label VerticalAlignment="Bottom" Foreground="White" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" Grid.Column="1" Grid.Row="1" Content="Sütő"></Label>
        <Label VerticalAlignment="Bottom" Foreground="White" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" Grid.Column="2" Grid.Row="1" Content="Ruhásszekrény"></Label>
        <Label VerticalAlignment="Bottom" Foreground="White" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" Grid.Column="3" Grid.Row="1" Content="Ágy"></Label>
        <Label VerticalAlignment="Bottom" Foreground="White" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" Grid.Column="4" Grid.Row="1" Content="Lego"></Label>
        <Label VerticalAlignment="Bottom" Foreground="White" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" Grid.Column="5" Grid.Row="1" Content="Kanapé"></Label>
        <Label VerticalAlignment="Bottom" Foreground="White"  FontSize="14" FontWeight="Bold"  HorizontalAlignment="Center"  Grid.Column="6" Grid.Row="1" Content="Mosógép"></Label>

    </Grid>
</Window>
