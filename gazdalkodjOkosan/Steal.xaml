<Window x:Class="gazdalkodjOkosan.Steal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gazdalkodjOkosan"
        mc:Ignorable="d"
        Title="Steal" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="White"/>
                <GradientStop Color="#FF504F4F" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Border Grid.Row="0" Grid.Column="0" Name="stealIcon"></Border>
        <Border Grid.Row="0" Grid.Column="6" Name="stealIcon2"></Border>

        <TextBlock TextWrapping="Wrap" FontSize="16" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold" Grid.ColumnSpan="3">Válassz egy számodra szükséges tárgyat!</TextBlock>

        <Label VerticalAlignment="Center" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" Grid.Column="0" Grid.Row="1" Content="Televízió"></Label>
        <Label VerticalAlignment="Center" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" Grid.Column="1" Grid.Row="1" Content="Sütő"></Label>
        <Label VerticalAlignment="Center" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" Grid.Column="2" Grid.Row="1" Content="Ruhásszekrény"></Label>
        <Label VerticalAlignment="Center" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" Grid.Column="3" Grid.Row="1" Content="Ágy"></Label>
        <Label VerticalAlignment="Center" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" Grid.Column="4" Grid.Row="1" Content="Lego"></Label>
        <Label VerticalAlignment="Center" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" Grid.Column="5" Grid.Row="1" Content="Kanapé"></Label>
        <Label VerticalAlignment="Center" FontSize="14" FontWeight="Bold"  HorizontalAlignment="Center"  Grid.Column="6" Grid.Row="1" Content="Mosógép"></Label>

        <Label VerticalAlignment="Bottom" Foreground="White" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" Grid.Row="1" Content="6000 Ft" Background="#99000000" OpacityMask="Black"/>
        <Label VerticalAlignment="Bottom" Foreground="White" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" Grid.Column="1" Grid.Row="1" Content="3000 Ft"  Background="#99000000" OpacityMask="Black"></Label>
        <Label VerticalAlignment="Bottom" Foreground="White" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" Grid.Column="2" Grid.Row="1" Content="6000 Ft"  Background="#99000000" OpacityMask="Black"></Label>
        <Label VerticalAlignment="Bottom" Foreground="White" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" Grid.Column="3" Grid.Row="1" Content="8000 Ft"  Background="#99000000" OpacityMask="Black"></Label>
        <Label VerticalAlignment="Bottom" Foreground="White" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" Grid.Column="4" Grid.Row="1" Content="2000 Ft"  Background="#99000000" OpacityMask="Black"></Label>
        <Label VerticalAlignment="Bottom" Foreground="White" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" Grid.Column="5" Grid.Row="1" Content="5000 Ft"  Background="#99000000" OpacityMask="Black"></Label>
        <Label VerticalAlignment="Bottom" Foreground="White"  FontSize="14" FontWeight="Bold"  HorizontalAlignment="Center"  Grid.Column="6" Grid.Row="1" Content="2500 Ft" Background="#99000000" OpacityMask="Black"></Label>

        <Button Margin="0 20 0 0" Name="btnStealTv" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Row="2" Grid.Column="0" BorderBrush="Black" BorderThickness="3" Click="btnStealTv_Click">Kiválasztás</Button>
        <Button Margin="0 20 0 0" Name="btnStealOven" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Row="2" Grid.Column="1" BorderBrush="Black" BorderThickness="3" Click="btnStealOven_Click">Kiválasztás</Button>
        <Button Margin="0 20 0 0" Name="btnStealCabinet" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Row="2" Grid.Column="2" BorderBrush="Black" BorderThickness="3" Click="btnStealCabinet_Click">Kiválasztás</Button>
        <Button Margin="0 20 0 0" Name="btnStealBed" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Row="2" Grid.Column="3" BorderBrush="Black" BorderThickness="3" Click="btnStealBed_Click">Kiválasztás</Button>
        <Button Margin="0 20 0 0" Name="btnStealLego" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Row="2" Grid.Column="4" BorderBrush="Black" BorderThickness="3" Click="btnStealLego_Click">Kiválasztás</Button>
        <Button Margin="0 20 0 0" Name="btnStealSofa" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Row="2" Grid.Column="5" BorderBrush="Black" BorderThickness="3" Click="btnStealSofa_Click">Kiválasztás</Button>
        <Button Margin="0 20 0 0" Name="btnStealWashing" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Row="2" Grid.Column="6" BorderBrush="Black" BorderThickness="3" Click="btnStealWashing_Click">Kiválasztás</Button>


        <Label Grid.Row="2" Grid.Column="3" FontSize="16" Margin="0 0 0 20" VerticalAlignment="Bottom" HorizontalAlignment="Center" Name="lblStealText"></Label>
    </Grid>
</Window>
